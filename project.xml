<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

    <record id="project_home_code" model="ir.sequence.type">
        <field name="name">Codigo Proyecto Inmobiliaria</field>
        <field name="code">project.home</field>
    </record>
    
    <!-- SECUENCIAS CARGADAS DESDE XML -->
    <record id="project_home_sequence" model="ir.sequence">
        <field name="name">Secuencia Proyecto Inmobiliaria</field>
        <field name="code">project.home</field>
        <field name="prefix">PR%(y)s-</field>      <!--creacion de secuencia-->
        <field name="implementation">no_gap</field>
        <field name="number_increment">1</field>
        <field name="padding">3</field>
    </record>

        <record id="herencia_order_prchs_academy" model="ir.ui.view">
            <field name="name">purchase.order.form.academy</field>
            <field name="model">purchase.order</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="purchase.purchase_order_form" /> <!--herencia de compras-->
            <field name="arch" type="xml">
                <field name="currency_id" position="after">
                    <field name="project_home_id" readonly="0"/>
                </field>
             </field>
        </record>

        <record id="herencia_order_prchs_academy_tree" model="ir.ui.view">
            <field name="name">purchase.order.tree.academy</field>
            <field name="model">purchase.order</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="purchase.purchase_order_tree" />
            <field name="arch" type="xml">
                <field name="origin" position="after">
                    <field name="project_home_id" />
                </field>
             </field>
        </record>

        <record id="herencia_order_prchs_academy_search" model="ir.ui.view">
            <field name="name">purchase.order.search.academy</field>
            <field name="model">purchase.order</field>
            <field name="type">search</field>
            <field name="inherit_id" ref="purchase.view_purchase_order_filter" />
            <field name="arch" type="xml">
                <field name="create_uid" position="after" >
                    <fied name="project_home_id" />
                </field>
                <filter name="message_unread" position="after">
                    <filter string="Proyecto Inmobiliaria" name="project_home" domain="[('project_home','=',True)]"/>

                </filter>

             </field>
        </record>

    <record id="form_project_home" model="ir.ui.view">
        <field name="name">project.home.form</field>
        <field name="model">project.home</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Formulario Proyecto">
                <header>
                    <button name="confirmar" string="Confirmar" type="object" icon="gtk-execute" states="nuevo" />

                    <button name="finalizar" string="Hecho" type="object" icon="STOCK_FULLSCREEN" class="oe_highlight" states="confirmado"/>

                    <button name="cancelar" string="Cancelar" type="object" icon="gtk-cancel" class="oe_highlight" states="confirmado"/>

                    <button name="nuevo" string="Regresar a Borrador" type="object" icon="gtk-redo"  states="cancelado"/>

                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <h1>
                            <label string="Proyecto" /> 
                            <field name="sequence" class="oe_inline"  readonly="1"/>
                        </h1>
                    </group>
                    <group col="4">
                        <field name="name" attrs="{'readonly':[('state','!=','nuevo')]}"/>
                    </group>
                    <group col="4">
                        <field name="home_number" attrs="{'readonly':[('state','!=','nuevo')]}"/>
                        <field name="date" attrs="{'readonly':[('state','!=','nuevo')]}"/>
                        <field name="supplier_id" attrs="{'readonly':[('state','not in',('confirmado','nuevo'))]}" domain="[('supplier','=',True)]"/>
                        <field name="order_id" readonly="0"/>
                        <field name="currency_id" invisible="1" />
                    </group>
                    <group>
                        <field name="location" attrs="{'readonly':[('state','!=','nuevo')]}"/>
                    </group>
                    <notebook>
                        <page string="Presupuesto">
                            
                            <field name="home_line" attrs="{'readonly':[('state','!=','nuevo')]}">
                                <tree string="Lineas Presupuesto" editable="bottom">
                                    <field name="name" />
                                    <field name="product_id" on_change="on_change_product(product_id)"/>
                                    <field name="product_uom" on_change="product_uom_change(product_uom,product_id)" groups="product.group_uom" options="{&quot;no_open&quot;: True}"/>
                                    <field name="qty" />
                                    <field name="price" />
                                    <field name="taxes_id" domain="[('parent_id','=',False),('type_tax_use','!=','sale')]" widget="many2many_tags"/>
                                    <field name="subtotal" />
                                </tree>
                            </field>
                        <group class="oe_subtotal_footer oe_right">
                            <field name="subtotal" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="tax_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <div class="oe_subtotal_footer_separator oe_inline">
                                    <label for="total"/>
                                    <button name="button_dummy"
                                        states="nuevo" string="(actualizar)" type="object" class="oe_edit_only oe_link"/>
                                </div>
                            <field name="total" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        </group>
                        <newline/>
                        <group>
                        </group>
                        </page>

                        <page string="Notas">
                            <field name="notas" placeholder="Notas......"/>
                        </page>
                    </notebook>
                </sheet>

            <div class="oe_chatter">
                <field name="message_follower_ids" widget="mail_followers"/>
                <field name="message_ids" widget="mail_thread"/> 
            </div>

            </form>
        </field>
    </record>

    <record id="tree_project_home" model="ir.ui.view">
        <field name="name">project.home.tree</field>
        <field name="model">project.home</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Listado de Proyectos" fonts="bold:state=='hecho'" colors="grey:state=='nuevo';blue:state in ('confirmado',);red:state in ('cancelado',);black:state=='hecho'">
                <field name="name" />
                <field name="sequence" />
                <field name="home_number" />
                <field name="total" />
                <field name="state" />
            </tree>
        </field>
    </record>

        <record id="action_project_home" model="ir.actions.act_window" >
            <field name="name">Proyectos</field>
            <field name="res_model">project.home</field>
            <field name="view_mode">tree,form</field>
        </record>

    <record id="purchase_form_action_project" model="ir.actions.act_window">
        <field name="name">Ordenes de Compra</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase.order</field>
        <field name="view_mode">tree,form,graph,calendar</field>
        <field name="context">{ 'search_default_project_home': 1}</field>
        <field name="domain"></field>
        <field name="search_view_id" ref="purchase.view_purchase_order_filter"/>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Click para crear una nueva Orden de Compra. 
          </p><p>

          </p>
        </field>
    </record>

    <record id="product_form_action_project" model="ir.actions.act_window">
        <field name="name">Productos</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.product</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="domain"></field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Click para crear una nuevo Producto.
          </p><p>

          </p>
        </field>
    </record>

    <!--  CREACION DE MENUS -->
    <menuitem id="menu_principal_project_home" name="Inmobiliaria"/>
    
    <menuitem id="menu_academy_prjects" name="Proyectos" parent="menu_principal_project_home" sequence="0"/>
    
    <menuitem id="menu_academy_prjects_act" name="Proyectos" parent="menu_academy_prjects" action="action_project_home" sequence="0"/>
    
    <menuitem id="menu_academy_pschases" name="Compras" parent="menu_principal_project_home" sequence="1"/>

    <menuitem id="menu_academy_prjects_purchase_act" name="Compras" parent="menu_academy_pschases" action="purchase_form_action_project" sequence="0"/>

    <menuitem id="menu_academy_prjects_prodct_act" parent="menu_academy_pschases" action="product_form_action_project" sequence="1"/>


    </data>
</openerp>